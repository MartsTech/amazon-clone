{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@element/*": ["components/elements/*"],
      "@module/*": ["components/modules/*"],
      "@section/*": ["components/sections/*"],
      "@layout/*": ["components/layouts/*"],
      "@template/*": ["components/templates/*"],
      "@style/*": ["styles/*"],
      "@slice/*": ["slices/*"],
      "@type/*": ["types/*"],
      "@config/*": ["configs/*"],
      "@util/*": ["utils/*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
